<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <!-- 底部选项卡样式 -->
    <style name="main_tab_bottom">
        <item name="android:textColor">#888888</item> 
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingTop">3.0dp</item>
        <item name="android:paddingBottom">3.0dp</item>
        <item name="android:drawablePadding">2.0dp</item>
    </style>
    
     <!-- switch -->
	 <style name="switch_optimus" parent="android:Widget.CompoundButton">
        <item name="thumb">@drawable/switch_track_red_bg</item>
        <item name="track">@drawable/switch_slider</item>
        <item name="textOn">@string/textOn</item>
        <item name="textOff">@string/textOff</item>
        <item name="thumbTextPadding">22.0dip</item>
        <item name="switchTextAppearance">@style/TextAppearanceSwitch</item>
        <item name="switchMinWidth">75.0dip</item>
        <item name="switchPadding">5.0dip</item>
    </style>
    
    <!-- switch -->
    <style name="TextAppearanceSwitch" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">?android:textColorLink</item>
    </style>
</resources>
